<div class="container-fluid">
  <!-- Page-Title -->
  <div class="row">
      <div class="col-sm-12">
          <div class="page-title-box">
              <div class="row ">
                  <div class=" col d-flex justify-content-between">
                      <h4 class="page-title mb-2"><%= pageTitle %></h4>
                      <ol class="breadcrumb justify-content-end">
                          <li class="breadcrumb-item"><a href="/news"><%= pageTitle %></a> <i class="mdi mdi-chevron-right"></i></li>
                          <li class="breadcrumb-item active"><%= pageTitle %></li>
                      </ol>
                  </div><!--end col-->               
              </div><!--end row-->                                                              
          </div><!--end page-title-box-->
      </div><!--end col-->
  </div><!--end row-->
  <!-- end page title end breadcrumb -->
  <div class="row">
      <div class="col-lg-12">
          <div class="card">
              <div class="card-header">
                  <div class="d-flex justify-content-between">
                  <h4 class="card-title"><span class="badge bg-soft-success font-12">Update <%= pageTitle %></span></h4>
                  <a class=" btn btn-sm btn-soft-primary" href="/news" role="button"><i class="fas fa-plus me-2"></i><%= pageTitle %> List</a>
                  </div>
              </div><!--end card-header-->
              <div class="card-body">
                  <form id="update-news">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="title" id="title" placeholder="e.g. John Doe" value="<%= news.title %>" autocomplete="off" autofocus="off" autosave="off">
                        <label for="title" data-title="title" >title</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control slug" name="slug" id="slug" value="<%= news.slug %>"  autocomplete="off" autosave="off">
                        <label for="slug" data-title="slug" >slug</label>
                    </div>
                    <div class="form-floating mb-3">
                       <textarea id="shortDesc" name="shortDesc" class="form-control"><%= news.shortDesc %></textarea>
                        <label for="shortDesc" data-title="shortDesc" >shortDesc</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea id="content" name="content" class="contenteditor form-control"> </textarea>
                         <label for="content" data-title="content" >content</label>
                     </div>
                  </form>
              </div><!--end card-body-->
          </div><!--end card-->
      </div><!--end col-->
  </div>
</div><!-- container -->

